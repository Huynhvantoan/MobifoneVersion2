<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_khoso"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:src="@drawable/ic_sim"/>

            <TextView
                style="@style/style_text_main"
                android:text="@string/kho_so"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_thutuc"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/card_khoso"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/layout_thutuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:src="@drawable/ic_thutuc"/>

            <TextView
                style="@style/style_text_main"
                android:text="@string/thu_tuc"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_km"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/card_congno"
        android:layout_below="@+id/card_khoso"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/layout_ctkm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:src="@drawable/ic_khuyenmai"/>

            <TextView
                style="@style/style_text_main"
                android:lines="2"
                android:text="@string/ct_km"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_congno"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_below="@+id/card_khoso"
        android:layout_toRightOf="@+id/card_km"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:id="@+id/layout_congno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:src="@drawable/ic_congno"/>

            <TextView
                style="@style/style_text_main"
                android:text="@string/cong_no"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_upanh"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/card_upanh"
        android:layout_below="@+id/card_congno"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        android:layout_marginBottom="20dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/layout_upanh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_upload"/>

            <TextView
                style="@style/style_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up_anh"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_vas"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/card_upanh"
        android:layout_alignTop="@+id/card_upanh"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/card_km"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/layout_vas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_banvas"/>

            <TextView
                style="@style/style_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ban_vas"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_cuoc"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_below="@+id/card_upanh"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="100dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/layout_cuoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                style="@style/style_image_main"
                android:adjustViewBounds="true"
                android:src="@drawable/payment1"/>

            <TextView
                style="@style/style_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tt_cuoc"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.toan_itc.mobifone.libs.view.StateLayout>
