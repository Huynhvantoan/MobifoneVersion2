<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:text="SĐT:"
        android:textColor="@color/md_black_1000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/txt_phone"
        android:hint="số điện thoại"
        android:inputType="phone"
        android:textColor="@color/md_black_1000"
        android:textColorHint="@color/md_blue_grey_200"
        android:textSize="@dimen/text_medium"
        />

    <Button
        android:id="@+id/btn_checkSdt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        android:text="@string/check_state_sdt"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_checkSdt"
        android:text=""
        android:textColor="@color/md_black_1000"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />
    <WebView
        android:id="@+id/show_html"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_checkSdt"
        android:visibility="gone"
        />
  </RelativeLayout>
</com.toan_itc.mobifone.libs.view.StateLayout>
