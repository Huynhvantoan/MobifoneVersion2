<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.v7.widget.AppCompatEditText
      android:id="@+id/txt_search"
      android:layout_marginTop="3dp"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:background="@null"
      android:digits="*?0123456789"
      android:gravity="start|center_vertical"
      android:hint="@string/home_txt_hint_search"
      android:textColor="@color/md_black_1000"
      android:textSize="@dimen/text_small"
      style="@style/search_edittext"/>

  <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/btn_search"
      android:layout_marginLeft="20dp"
      android:layout_width="70dp"
      android:layout_height="45dp"
      android:layout_toRightOf="@+id/txt_search"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_search"/>

  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spinner"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_below="@+id/txt_search"
      android:spinnerMode="dropdown"/>

  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spinner_dauso"
      android:layout_toRightOf="@+id/spinner"
      android:layout_below="@+id/txt_search"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:spinnerMode="dropdown"/>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/spinner_dauso"/>

</com.toan_itc.mobifone.libs.view.StateLayout>
