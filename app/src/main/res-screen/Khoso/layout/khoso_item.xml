<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="@dimen/cardview_left"
    android:layout_marginRight="@dimen/cardview_left"
    android:layout_marginTop="@dimen/cardview_top"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="100dp"
    card_view:cardCornerRadius="8dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:paddingLeft="10dp">
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="090909090"
        android:textColor="@color/md_black_1000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/txt_vnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="50000"
        android:textColor="@color/md_black_1000"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="VNĐ"
        android:textColor="@color/md_black_1000"
        android:layout_gravity="center_vertical"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/btn_goicuoc"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Gói cước"
        android:textColor="@color/md_red_500"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_shop"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_add_shopping_cart_black_24dp"
        />
  </LinearLayout>
</android.support.v7.widget.CardView>
