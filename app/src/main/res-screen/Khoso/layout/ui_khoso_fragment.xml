<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="UseCompoundDrawables"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/card_tratruoc"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginBottom="20dp"
      android:layout_marginRight="20dp"
      android:clickable="true"
      android:elevation="100dp"
      card_view:cardCornerRadius="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:contentDescription="@null"
          android:src="@drawable/tratruoc"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:text="@string/kho_sim_tratruoc"
          android:textColor="@color/md_black_1000"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:id="@+id/card_tratruoc_dep"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_toRightOf="@+id/card_tratruoc"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:elevation="100dp"
      card_view:cardCornerRadius="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:contentDescription="@null"
          android:src="@drawable/tratruocsodep"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="@string/kho_sim_tratruoc_dep"
          android:textColor="@color/md_black_1000"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:id="@+id/card_trasau"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_below="@+id/card_tratruoc"
      android:layout_marginBottom="20dp"
      android:layout_marginRight="20dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:elevation="100dp"
      card_view:cardCornerRadius="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:contentDescription="@null"
          android:src="@drawable/trasau"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="@string/kho_sim_trasau"
          android:textColor="@color/md_black_1000"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:id="@+id/card_sodep"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_alignTop="@+id/card_trasau"
      android:layout_toRightOf="@+id/card_trasau"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:elevation="100dp"
      card_view:cardCornerRadius="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:contentDescription="@null"
          android:src="@drawable/camket"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="@string/kho_sim_dep"
          android:textColor="@color/md_black_1000"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:id="@+id/card_check"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_below="@+id/card_trasau"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:elevation="100dp"
      card_view:cardCornerRadius="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:contentDescription="@null"
          android:src="@drawable/kiemtra1"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="@string/check_sdt"
          android:textColor="@color/md_black_1000"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </android.support.v7.widget.CardView>
</com.toan_itc.mobifone.libs.view.StateLayout>
