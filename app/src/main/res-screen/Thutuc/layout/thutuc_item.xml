<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="@dimen/cardview_left"
    android:layout_marginRight="@dimen/cardview_left"
    android:layout_marginTop="@dimen/cardview_top"
    android:elevation="100dp"
    card_view:cardCornerRadius="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/layout_item"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_theloai"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_upload"/>

        <TextView
            android:id="@+id/txt_thutuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_theloai"
            android:textColor="@color/md_black_1000"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
